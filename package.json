{
	"name": "resize-observer-singleton",
	"version": "0.0.5",
	"packageManager": "pnpm@10.14.0",
	"description": "A singleton wrapper for the ResizeObserver API to optimize performance and simplify usage.",
	"type": "module",
	"license": "MIT",
	"homepage": "https://github.com/ianduvall/resize-observer-singleton#readme",
	"bugs": {
		"url": "https://github.com/ianduvall/resize-observer-singleton/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ianduvall/resize-observer-singleton.git"
	},
	"author": "Ian Duvall",
	"funding": "https://github.com/sponsors/ianduvall",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint --cache .",
		"lint:fix": "pnpm run lint --fix",
		"build": "tsdown",
		"dev": "tsdown --watch",
		"demo": "pnpx serve",
		"test": "vitest run",
		"test:dev": "vitest dev",
		"typecheck": "tsc --noEmit",
		"format": "prettier --cache --write --ignore-unknown .",
		"release": "bumpp && pnpm publish",
		"prepublishOnly": "pnpm run build"
	},
	"devDependencies": {
		"@sxzz/eslint-config": "^7.1.2",
		"@types/node": "^22.17.1",
		"@vitest/browser": "^3.2.4",
		"bumpp": "^10.2.2",
		"eslint": "^9.33.0",
		"playwright": "^1.54.2",
		"prettier": "^3.6.2",
		"tsdown": "^0.11.13",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=20.18.0"
	},
	"prettier": {
		"useTabs": true,
		"trailingComma": "all",
		"semi": true
	}
}
